<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewer.CadastroEntrega">

    <EditText
        android:id="@+id/edtStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:hint="Status"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/edtASuprimentoUUID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/edtStatus"
        android:hint="SuprimentoUUID"
        android:gravity="center"
        />

    <EditText
        android:id="@+id/edtAPontoDistribuicaoUUID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_below="@id/edtASuprimentoUUID"
        android:hint="PontoDistribuicaoUUID"
        android:gravity="center"
        />

    <Button
        android:id="@+id/btnSalvarEntrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_centerHorizontal="true"
        android:text="Salvar"
        android:layout_below="@id/edtAPontoDistribuicaoUUID"
        android:layout_marginTop="16dp"
        />

</RelativeLayout>