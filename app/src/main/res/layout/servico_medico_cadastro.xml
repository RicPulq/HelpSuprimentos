<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".viewer.CadastroArmazem"
        android:background="@drawable/background">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cadastro de Serviço Médico"
            android:textColor="@color/purple_500"
            android:textStyle="bold"
            android:textSize="27dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <View
            android:id="@+id/containerComponents"
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:background="@drawable/container_components"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/title"
            />

        <EditText
            android:id="@+id/edtUsuarioUUID"
            style="@style/Edit_Text"
            android:gravity="center"
            android:hint="Usuário UUID"
            app:layout_constraintEnd_toEndOf="@+id/containerComponents"
            app:layout_constraintStart_toStartOf="@+id/containerComponents"
            app:layout_constraintTop_toTopOf="@+id/containerComponents"
            />

        <EditText
            android:id="@+id/edtLocalizacao"
            style="@style/Edit_Text"
            android:gravity="center"
            android:hint="Localização"
            app:layout_constraintEnd_toEndOf="@+id/containerComponents"
            app:layout_constraintStart_toStartOf="@+id/containerComponents"
            app:layout_constraintTop_toBottomOf="@+id/edtUsuarioUUID"
            />

        <EditText
            android:id="@+id/edtTipoAtendimento"
            style="@style/Edit_Text"
            android:gravity="center"
            android:hint="Tipo de Atendimento"
            app:layout_constraintEnd_toEndOf="@+id/containerComponents"
            app:layout_constraintStart_toStartOf="@+id/containerComponents"
            app:layout_constraintTop_toBottomOf="@+id/edtLocalizacao"

            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSalvarServico"
            style="@style/Button2"
            android:layout_centerHorizontal="true"
            android:text="Salvar"
            android:textColor="@color/purple_700"
            app:layout_constraintTop_toBottomOf="@+id/containerComponents"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>